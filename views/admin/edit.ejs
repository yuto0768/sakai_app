<h1>編集画面です</h1>
<form action="./<%=row.id%>/update" method="POST">
    <dl>
        <dt>商品名</dt>
        <dd><input type="text" value="<%=row.name%>" name="name"></dd>
        <dt>情報</dt>
        <dd><input type="text" value="<%=row.info%>" name="info"></dd>
        <dt>サイズ</dt>
        <dd><input type="text" value="<%=row.size%>" name="size"></dd>
        <dt>カラー</dt>
        <dd><input type="text" value="<%=row.color%>" name="color"></dd>
        <dt>価格</dt>
        <dd><input type="text" value="<%=row.price%>" name="price"></dd>
    </dl>
    <input type="submit" value="保存" class="btn btn-primary">
</form>
<form action="./<%=row.id%>/delete" method="POST">
    <input type="submit" value="削除" class="btn btn-danger">
</form>